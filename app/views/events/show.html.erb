<h3 class="d-flex justify-content-center text-secondary font-italic mt-4">
  <strong> </strong>
  <%= @event.description %>
</h3>


<p>
<strong class="text-primary mt-4">Lieu:</strong>
  <%= @event.location %>
</p>

<p class="mt-5">
  <strong class="text-primary">Prix:</strong>
  <%= @event.price %>€
</p>

<p class="d-flex justify-content-end text-capitalize mr-2">
  by - <%= @event.admin.email %>
</p>

<table id="test" class="table table-striped table-hover ">
  <thead>
    <tr>
      <th scope="col" class="text-center">Début</th>
      <th scope="col" class="text-center">Durée</th>
      <th scope="col" class="text-center">Fin</th>
    </tr>
  </thead>
  <tbody >
    <tr>
      <td class="text-center"><%= @event.start_date.strftime("%d/%m/%Y") %> à <%= @event.start_date.strftime("%Hh%M") %></td>
      <td class="text-center"><%= @event.duration %> minutes </td>
      <td class="text-center font-italic"><%= @end_date.strftime("%d/%m/%Y") %> à <%= @end_date.strftime("%Hh%M") %></td>
    </tr>
  </tbody>
</table>

<hr/>

<% if is_admin? == true  %>

<p>
  <strong>Participants:</strong>
  Il y a <%= @event.attendees.count %> participants à votre évènement :<br>
  <% @event.attendees.each do |attendee| %>
    <%= attendee.first_name + ' ' + attendee.last_name %><br>
  <% end %>
</p>
<div class="d-flex justify-content-center mb-4">
 <a  class="btn btn-primary mr-2" href="<%= edit_event_path(@event) %>" >Editer</a>
<a  class="btn btn-primary mr-2" href="<%= @event %>" data-method="DELETE" data-confirm="Tourne 7 fois ta langue dans ta bouche... Tu es certain ?">Supprimer l'évènement</a>
<a  class="btn btn-primary" href="<%= events_path %>" >Retour</a>
</div>
<% else %>
<div class="d-flex justify-content-center mb-4">
<a  class=" btn btn-primary" href="<%= events_path %>" >Retour</a>
</div>
<% end %>









        


