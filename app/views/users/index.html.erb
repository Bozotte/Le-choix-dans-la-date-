<h1 class="mt-5 text-center">Les utilisateurs</h1>

<div class="container mt-5">
  <table class="table border border-dark">
    <thead>
    <tr class="bg-dark text-light">
      <th>Prénom</th>
      <th>Nom</th>
      <th>Description</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.description %></td>
          <td><%= user.email %></td>
          <% if current_user.id == user.id %>
            <td><a href="<%= user_path(user) %>"><i class="fas fa-eye"></i></td>
            <td><a href="<%= edit_user_path(user) %>"><i class="fas fa-edit"></i></td>
            <td><a href="<%= user_path(user) %>" data-confirm="Etes-vous sûr ?" data-method="DELETE"><i class="fas fa-trash-alt"></i></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
